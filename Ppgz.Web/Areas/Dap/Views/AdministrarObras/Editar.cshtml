        function editcontacto() {

            $('#editEmployeeModal').on('show.bs.modal', function (event) {

                var id = $(event.relatedTarget).attr('data-id');
                var nombre = $(event.relatedTarget).attr('data-nombre');
                var email = $(event.relatedTarget).attr('data-email');
                var telefono = $(event.relatedTarget).attr('data-telefono');

                $("#txteditid").val(id);
                $("#txteditnombre").val(nombre);
                $("#txteditemail").val(email);
                $("#txtedittelefono").val(telefono);

            });

        }
        function deletecontacto() {

            $('#deleteEmployeeModal').on('show.bs.modal', function (event) {

                var deleteid = $(event.relatedTarget).attr('data-id');
                var deletenombre = $(event.relatedTarget).attr('data-nombre');

                $("#txtdeleteid").val(deleteid);
                $("#txtdeletenombre").val(deletenombre);


            });
        }
    </script>



}