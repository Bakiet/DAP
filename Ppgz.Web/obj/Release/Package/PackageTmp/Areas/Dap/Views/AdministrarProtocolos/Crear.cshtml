@model Ppgz.Web.Areas.Dap.Models.ProtocoloViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="form-signin-heading">Protocolos de chequeo</h2>
@*<p class="page-description-title"><i class="fa fa-info" aria-hidden="true"></i> <i>Crear Protocolos de chequeo</i></p>*@


<div class="panel panel-default">
    <div class="panel-heading">Formulario de Protocolos de chequeo</div>
    <div class="panel-body">
        @using (Html.BeginForm("Crear", "AdministrarProtocolos", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "form", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(f => f.obra, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(f => f.obra_id, (IEnumerable<SelectListItem>)ViewBag.Obras, "Seleccione un Valor", new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(f => f.obra_id)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.Nombre, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(p => p.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.Nombre)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">ARCHIVO</label>
                <div class="col-sm-4">
                    <div>
                       
                                <ul class="nav nav-tabs" role="tablist" id="text-pdf">

                                    <li role="presentation" id="pdf"><a href="#pdf-panel" aria-controls="pdf-panel" role="tab" data-toggle="tab">Subir Archivo</a></li>
                                </ul>

                                <div class="tab-content">

                                    <div role="tabpanel" class="tab-pane" id="pdf-panel">
                                        <input type="file" style="padding: 20px;" name="Pdf" id="Pdf">
                                        @Html.ValidationMessageFor(k => k.Url)

                                    </div>
                                </div>
                        
                    </div>
                </div>
            </div>

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-7">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar</button>
                        <a class="btn btn-default" href="@Url.Action("Index", "AdministrarProtocolos")"><i class="fa fa-undo" aria-hidden="true"></i> Cancelar</a>
                    </div>
                </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        
       

        $(document).ready(function () {

            $("#Pdf").bind('change', function () {
        
                if (this.files[0].size / 1024 / 1024 > 3) {
                    $(this).val("");

                    alert('Debe incluir un archivo menor a 3Mb');
                }
            });



            $('.fecha-hora').datetimepicker({
                locale: 'es',

                format: 'DD/MM/YYYY',
                showClose: true,
                sideBySide: true
            });

            $("#form").submit(function (eventObj) {
                if ($("ul#text-pdf li.active").attr("id") === "pdf") {
                    $('<input />').attr('type', 'hidden')
                        .attr('name', "pdf")
                        .attr('value', "pdf")
                        .appendTo('#form');
                }
                return true;
            });

           
        });

    </script>


}